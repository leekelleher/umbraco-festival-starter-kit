@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "FestivalStarterKit.cshtml";
}

@section HtmlBodyContent
{
	@Umbraco.Field("pageTitle", "pageName", insertBefore: "<h1>", insertAfter: "</h1>")
	@Umbraco.Field("pageText")

	<!-- List schedule -->
	<dl>
		@foreach (var timeslot in Model.Content.Children)
		{
			<dt>@timeslot.Name</dt>
			foreach (var session in timeslot.Children)
			{
				<dd>
					@if (session.IsDocumentType("SessionPage"))
					{
						<a href="@session.NiceUrl()">@session.Name</a>
					}
					else
					{
						<em>@session.Name</em>
					}
				</dd>
			}
		}
	</dl>
}