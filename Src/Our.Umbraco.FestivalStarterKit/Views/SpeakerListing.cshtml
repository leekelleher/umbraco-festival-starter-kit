@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "FestivalStarterKit.cshtml";
}

@section HtmlBodyContent
{
	@Umbraco.Field("pageTitle", "pageName", insertBefore: "<h1>", insertAfter: "</h1>")
	@Umbraco.Field("pageText")

	<ul>
		@foreach (var speaker in Model.Content.Descendants("SpeakerPage"))
		{
			<li>
				<a href="@speaker.NiceUrl()">
					<img src="@speaker.GetPropertyValue("speakerPhoto")" alt="@speaker.Name" />
					<span>@Umbraco.Coalesce(speaker.GetPropertyValue("pageTitle"), speaker.Name)</span>
					<span>@speaker.GetPropertyValue("pageText")</span>
				</a>
			</li>
		}
	</ul>
}