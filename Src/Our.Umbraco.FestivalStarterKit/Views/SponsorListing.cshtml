@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{ Layout = "FestivalStarterKit.cshtml"; }

@section HtmlBodyContent
{
	<ul>
		@foreach (var sponsor in Model.Content.Children)
		{
			<li>
				<a href="@Umbraco.Coalesce(sponsor.GetPropertyValue("sponsorLink"), sponsor.Url)">
					<img src="@sponsor.GetPropertyValue("sponsorLogo")" alt="@sponsor.Name" />
					<span>@Umbraco.Coalesce(sponsor.GetPropertyValue("pageTitle"), sponsor.Name)</span>
					<span>@sponsor.GetPropertyValue("pageText")</span>
				</a>
			</li>
		}
	</ul>
}